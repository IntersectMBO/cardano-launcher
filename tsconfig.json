{
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveConstEnums": true
  },
  "typedocOptions": {
    "excludeExternals": true,
    "out": "site"
  }
}
